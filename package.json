{
  "name": "dark-synthwave-84",
  "displayName": "Dark SynthWave '84",
  "description": "Dark Synthwave inspired colour theme",
  "version": "1.0.2",
  "author": "maxoiduss",
  "publisher": "dell-maxoiduss",
  "icon": "icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Themes"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "contributes": {
    "themes": [
      {
        "id": "Dark SynthWave '84",
        "label": "Dark SynthWave '84",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-synthwave-84-color-theme.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hidden-container",
          "title": "Hidden",
          "icon": "resources/hidden.svg",
          "order": 3
        }
      ]
    },
    "views": {
      "hidden-container": [
        {
          "id": "hiddenView",
          "name": "Hidden",
          "type": "webview",
          "icon": "resources/hidden.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "dark-synthwave.showBuiltinFeatures",
        "title": "Hidden extensions: show"
      },
      {
        "command": "dark-synthwave.hideBuiltinFeatures",
        "title": "Hidden extensions: hide"
      },
      {
        "command": "dark-synthwave.showActivityBar",
        "title": "Show/Hide Activity Bar"
      },
      {
        "command": "dark-synthwave.aimFile",
        "title": "Reveal file/extension",
        "icon": {
          "dark": "resources/aimDark.svg",
          "light": "resources/aimLight.svg"
        }
      }
    ],
    "menus":
    {
      "editor/title": [
        {
          "command": "dark-synthwave.aimFile",
          "group": "navigation"
        }
      ]
    }   
  },
  "scripts": {
    "vscode:prepublish": "npm run pretest",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint .",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^8.57.1",
    "typescript": "^5.1.3"
  }
}
